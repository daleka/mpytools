{
  "name": "mpytools",
  "displayName": "MPyTools",
  "description": "MPyTools – просте та гнучке розширення для роботи з MicroPython у VS Code. | MPyTools – a simple and flexible extension for working with MicroPython in VS Code.",
  "version": "0.0.9",
  "preview": true,
  "publisher": "daleka",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mpytools.connect",
        "title": "MPY: Підключитись та запустити REPL | MPY: Connect and start REPL"
      },
      {
        "command": "mpytools.compileAndMount",
        "title": "MPY: Компіляція PY → MPY та монтування | MPY: Compile PY → MPY and mount"
      },
      {
        "command": "mpytools.installDependencies",
        "title": "MPY: Встановити залежності | MPY: Install Dependencies"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "icon": "icon.png"
}
